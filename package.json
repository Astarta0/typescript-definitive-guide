{
  "name": "book-builder",
  "version": "1.0.0",
  "description": "",
  "main": "./index.js",
  "repository": {
    "type": "git",
    "url": "git@github-nauchikus:nauchikus/typescript-definitive-guide.git"
  },
  "author": "",
  "license": "ISC",
  "bin": {
    "book-builder": "bin/book-builder"
  },
  "scripts": {
    "postinstall": "npm run update-content",
    "prestart@@": "env NODE_ENV=development npm run book:build",
    "update-content": "./update-content.sh",
    "sitemap-replace-domain": "nodge ./src/actions/replace-domain-in-sitemmap-action.js",
    "create-book-contents-info-action": "node ./src/actions/create-book-contents-info-action.js",
    "clear-old-build": "node src/actions/clear-old-build.js",
    "md-to-html-action": "node ./src/actions/md-to-html-action.js",
    "format-html-action": "node ./src/actions/format-html-action.js",
    "scripts": "ntl",
    "start": "cross-env NODE_ENV=development ./bin/book-builder",
    "build": "node ./bin/book-builder",
    "update": "npm i -D npm-upgrade && npm-upgrade"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './config/git/commitlint.js'"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/git/commitizen.js"
    },
    "configProd": "./builder.prod.config.js",
    "configDev": "./builder.dev.config.js"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "del": "^3.0.0",
    "hastscript": "^5.0.0",
    "highlightjs": "^9.12.0",
    "remark-highlight.js": "^5.1.0",
    "remark-html": "^9.0.0",
    "remark-parse": "^6.0.3",
    "shelljs": "^0.8.3",
    "textract": "^2.4.0",
    "translit-rus-eng": "^1.0.7",
    "unified": "^7.1.0"
  },
  "devDependencies": {
    "commitizen": "^3.0.5",
    "cz-customizable": "^5.3.0"
  }
}
